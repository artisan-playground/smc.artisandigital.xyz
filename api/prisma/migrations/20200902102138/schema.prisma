datasource db {
  provider = "postgresql"
  url = "***"
}

generator prisma_client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  firstName String?
  lastName  String?
  phone     String?
  role      Role      @default(EMPLOYEE)
  company   Company   @relation(fields: [companyId], references: [id])
  companyId Int
  History   History[]
}

model Company {
  id          Int    @id @default(autoincrement())
  companyName String
  users       User[]
}

enum Role {
  EMPLOYEE
  ADMIN
}

model Inventory {
  id          Int    @id @default(autoincrement())
  productName String
  quantity    Int
}

model History {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}
